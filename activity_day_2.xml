<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.hotfoot.Day_2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:orientation="vertical">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imgDay2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_day_2"
        android:id="@+id/txtDay2"
        android:layout_below="@+id/imgDay2"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day2Date"
            android:layout_below="@+id/txtDay2"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/txtDay2Description"
            android:id="@+id/txtDay2Description"
            android:layout_below="@+id/day2Date"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Whiteboarding Activity Photos and Images"
            android:id="@+id/txtDay2Instructions"
            android:layout_below="@+id/txtDay2Description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="15dp" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/day2GridView"
            android:layout_below="@+id/txtDay2Instructions"
            android:layout_centerHorizontal="true"
            android:numColumns="3"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:id="@+id/btnUpload"
            android:layout_below="@+id/day2GridView"
            android:layout_centerHorizontal="true"
            android:background="#B35243"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Notes:"
            android:id="@+id/txtDay2Description2"
            android:layout_below="@+id/imgLarge"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/txtDay2Instructions" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtDay2Notes"
            android:layout_below="@+id/txtDay2Description2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:hint="@string/txtResponse"
            android:gravity="left|top" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Go Forth!"
            android:id="@+id/btnDay2"
            android:layout_below="@+id/txtDay2Notes"
            android:layout_centerHorizontal="true"
            android:background="#B35243"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/imgLarge"
            android:layout_below="@+id/btnUpload"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</ScrollView>
