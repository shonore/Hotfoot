<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.hotfoot.Registar">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/txtSprintName"
        android:layout_alignParentTop="true"
        android:hint="@string/txtSprintName"
        android:typeface="sans"
        android:textSize="24sp"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/txtLocation"
        android:layout_alignStart="@+id/txtLocation"
        android:layout_alignRight="@+id/txtLocation"
        android:layout_alignEnd="@+id/txtLocation"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/txtLocation"
        android:layout_below="@+id/txtSprintName"
        android:hint="@string/txtLocation"
        android:textSize="24sp"
        android:layout_alignLeft="@+id/txtStartDate"
        android:layout_alignStart="@+id/txtStartDate"
        android:layout_alignRight="@+id/txtStartDate"
        android:layout_alignEnd="@+id/txtStartDate"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtStartDate"
        android:clickable="false"
        android:hint="@string/txtStartDate"
        android:layout_below="@+id/txtLocation"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:contentDescription="startDate" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btnNext"
        android:id="@+id/btnNext"
        android:layout_below="@+id/txtStartDate"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="100dp"
        android:background="#B35243" />
</RelativeLayout>
